<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'blueprint/custom.css', :media => 'screen' %>
<!--  <%= stylesheet_link_tag 'blueprint/print', :media => 'print' %> -->

  <!-- jQuery -->
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js' %>

  <!-- AnythingSlider Plugins (optional) -->
  <%= javascript_include_tag 'jquery.easing.1.2.js' %>
  <%= javascript_include_tag 'swfobject.js' %>

  <!-- AnythingSlider -->
  <%= javascript_include_tag 'jquery.anythingslider.js' %>

  <!-- Temas de AnythingSlider -->
  <%= stylesheet_link_tag 'anythingslider/anythingslider', :media => 'screen' %>
  <%= stylesheet_link_tag 'anythingslider/theme-metallic', :media => 'screen' %>
  <%= stylesheet_link_tag 'anythingslider/theme-minimalist-round', :media => 'screen' %>
  <%= stylesheet_link_tag 'anythingslider/theme-minimalist-square', :media => 'screen' %>
  <%= stylesheet_link_tag 'anythingslider/theme-construction', :media => 'screen' %>
  <%= stylesheet_link_tag 'anythingslider/thee-cs-portfolio', :media => 'screen' %>

  <%= csrf_meta_tag %>

  <script type="text/javascript">
    $(function () {
      $('#slider1').anythingSlider({
        startText : "Ver",
        stopText  : "Ver"
      });
    });
  </script>

  <!-- Navigation -->
  <script type="text/javascript">
    $(document).ready(function(){
      $('#nav li').hover(function () {
        $(this).find('.dropDown').slideToggle(200);
    		$(this).toggleClass('active');
      });
    });
  </script>

</head>
